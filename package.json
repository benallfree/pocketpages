{
  "name": "pocketpages-monorepo",
  "private": true,
  "devDependencies": {
    "@changesets/cli": "^2.28.0",
    "concurrently": "^9.1.2",
    "prettier": "^3.5.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "dev": "bun run --filter='*' dev",
    "build": "bun run --filter='*' build",
    "publish": "bun run build && bun run --filter='*' publish"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "workspaces": [
    "packages/*",
    "packages/plugins/*",
    "packages/starters/*"
  ]
}
