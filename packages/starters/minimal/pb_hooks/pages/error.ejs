<!-- slot:content -->
<!-- Error section -->
<div class="glass-card p-12 animate-fade-in-up">
  <div class="space-y-6">
    <div class="inline-block">
      <h1
        class="text-8xl md:text-9xl font-bold error-gradient animate-pulse-slow"
      >
        <%= response.status() %>
      </h1>
    </div>
    <div
      class="bg-black text-green-400 font-mono rounded-lg p-6 mb-4 shadow-inner border border-green-700 text-left max-w-64 overflow-x-auto mx-auto"
    >
      <div class="mb-2">
        <span class="ml-2"><%= response.status() %> Error</span>
      </div>
      <div class="overflow-x-auto w-full max-w-full">
        <pre class="text-green-300 text-left max-w-full">
<%= response.error().message %></pre
        >
      </div>
    </div>
    <p
      class="text-lg md:text-xl text-white/90 font-light tracking-wide max-w-2xl mx-auto"
    >
      <% if (response.status() === 404) { %>
        The page you're looking for can't be found. It may have been moved or deleted.
      <% } else if (response.status() === 401) { %>
        You don't have permission to view this page. Please log in or check your access rights.
      <% } else if (response.status() === 500) { %>
        Oops! Something went wrong on our end. Please try again later.
      <% } else if (response.status() === 403) { %>
        Access denied. You do not have the required permissions to view this page.
      <% } else { %>
        An unexpected error occurred. Please check the URL or try again.
      <% } %>
    </p>
  </div>
</div>

